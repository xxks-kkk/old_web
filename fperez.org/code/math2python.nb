Notebook[{
Cell[TextData[{
  "A function to generate Python code out of ",
  StyleBox["Mathematica",
    FontSlant->"Italic"],
  " variables.\nIt's quite primitive: basically it only supports exporting of \
numbers and (arbitrarily nested) lists. All numbers (even regular integers) \
are exported as floats.\n\nAuthor: Fernando Perez \
<Fernando.Perez@colorado.edu>"
}], "Text"],

Cell[BoxData[{
    \(\(mvars2pyfile[symnames_List, fname_, precision_:  24] := 
        Module[\[IndentingNewLine]{k, sym, symname, snamestr, symCForm, 
            pysym, pyfile}, \[IndentingNewLine]pyfile\  = \ 
            OpenWrite[fname]; \[IndentingNewLine] (*\ 
            Write\ python\ header . \ 
                Mathematica\ uses\ \*"\"\<\\< ... \\>\>\""\ for\ multiline\ \
strings\ *) \[IndentingNewLine]WriteString[
            pyfile, \[IndentingNewLine]\*"\"\<\\<\\\"\\\"\\\" *** FILE \
AUTO-GENERATED BY MATHEMATICA.  DO NOT EDIT!!! *** \\\"\\\"\\\"\n\nfrom \
Numeric import array\n\n\\>\>\""]; \[IndentingNewLine]For[k = 1, 
            k \[LessEqual] 
              Length[symnames], \(k++\), \[IndentingNewLine]symname = 
              Extract[Unevaluated[symnames], k, 
                Hold]; \[IndentingNewLine]snamestr = 
              StringReplace[
                ToString[
                  symname], {"\<Hold[\>" -> "\<\>", "\<]\>" -> "\<\>"}]; \
\[IndentingNewLine]sym = 
              SetPrecision[ReleaseHold[symname], 
                precision]; \[IndentingNewLine]pysym = 
              ToString[sym, CForm]; \[IndentingNewLine] (*\ 
              Print["\<name: \>", 
                symname]; \[IndentingNewLine]Print["\<name2: \>", 
                snamestr]; \[IndentingNewLine]Print["\<sym:  \>", 
                sym];\ *) \[IndentingNewLine] (*\ For\ lists, \ 
              CForm\ doesn' t\ cut\ it\ in\ python, \ 
              we\ need\ to\ change\ things\ a\ bit\ *) \[IndentingNewLine]If[
              Head[sym] === 
                List, \[IndentingNewLine]\(pysym = 
                  StringForm["\<array(`1`)\>", 
                    StringReplace[
                      pysym, {"\<List(\>" \[Rule] "\<[\>", "\<)\>" \[Rule] \
"\<]\>"}]];\)\[IndentingNewLine]]; \[IndentingNewLine]WriteString[pyfile, 
              StringForm["\<`1` = `2`\n\n\>", snamestr, 
                pysym]];\[IndentingNewLine]]; \  (*\ 
            End\ for\ loop\ *) \[IndentingNewLine]Close[
            pyfile]; \[IndentingNewLine]Print["\<Output saved in file: \>", 
            fname];\[IndentingNewLine]]\  (*\ 
        End\ module\ *) ;\)\), "\[IndentingNewLine]", 
    \(\(SetAttributes[mvars2pyfile, HoldFirst];\)\)}], "Input"],

Cell["An example of mvars2pyfile usage", "Text"],

Cell[CellGroupData[{

Cell[BoxData[{
    \(anint\  = \ 4\), "\[IndentingNewLine]", 
    \(afloat\  = \ 3.2\), "\[IndentingNewLine]", 
    \(alist\  = \ {1, 2, 3}\), "\[IndentingNewLine]", 
    \(amatrix = {{1.0, 2}, {3, 4}}\), "\[IndentingNewLine]", 
    \(mvars2pyfile[{anint, afloat, alist, 
        amatrix}, "\<mathematicatest.py\>"]\)}], "Input"],

Cell[BoxData[
    \(4\)], "Output"],

Cell[BoxData[
    \(3.2`\)], "Output"],

Cell[BoxData[
    \({1, 2, 3}\)], "Output"],

Cell[BoxData[
    \({{1.`, 2}, {3, 4}}\)], "Output"],

Cell[BoxData[
    InterpretationBox[\("Output saved in file: \
"\[InvisibleSpace]"mathematicatest.py"\),
      SequenceForm[ "Output saved in file: ", "mathematicatest.py"],
      Editable->False]], "Print"]
}, Open  ]],

Cell["\<\
To use this from python, simply say 'import filename'.  The \
mathematica variables become available as filename.foo, filename.var, \
etc.\
\>", "Text"]
